<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>HomePage</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="blog-container">
      <% blog.forEach(blog => { %>
      <div class="card mt-4">
        <div class="card-body">
          <img
            src="<%= blog.blogImg %>"
            class="card-img-top img-fluid"
            alt="Blog Image"
            style="width: 100%; height: 450px; object-fit: cover"
          />
          <h2 class="card-title"><%= blog.title %></h2>
          <p class="card-text"><%= blog.content.substring(0, 200) %>...</p>
          <p class="card-text">Posted by <%= blog.createdBy.name %></p>
          <p class="card-text text-muted">Posted on <%= blog.date %></p>
          <a href="/blog/<%= blog._id %>" class="btn btn-success">Read More!</a>
        </div>
      </div>
      <% }) %>
    </div>
    <%- include('./partials/scripts') %>
  </body>
</html>
